<form>
    <div class="form-group">
        <label for="formGroupExampleInput">Nombre</label>
        {{input type="text" class="form-control" value=first_name required=true}}
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput">Apellido</label>
        {{input type="text" class="form-control" value=last_name required=true}}
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput">Celular</label>
        {{!-- {{input type="number" class="form-control" value=cellphone required=true min="3000000000" max="3999999999"}} --}}
        {{input type="number" class="form-control" value=cellphone required=true}}
    </div>
    <button {{action 'save'}} type="submit" class="btn btn-primary">Enviar</button>
</form>