
<table >
	<tr>
  	<th>name</th>
    <th>lala</th>
  </tr>
 
{{#each model as |task|}}
	<tr>
  	{{#if task.done}}
      <td style="text-decoration:line-through">{{task.description}}</td>
    {{else}}
      <td>
      	{{#if task.num_to_send}}
          {{#link-to "task" task.id}}
            {{task.description}}
          {{/link-to}}
        {{else}}
          {{#link-to "content" task.content.id}}
              {{task.description}}
          {{/link-to}}
        {{/if}}
      </td>
    {{/if}}
    
		<td>{{input type="checkbox" checked=(readonly task.done)}}</td>
	</tr>
{{/each}}
</table>