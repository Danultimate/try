    <div class="dr-headerlogros">
        <div class="dr-persona">
            {{#if model.firstObject.user.picture}}
            <img src="{{model.firstObject.user.picture}}" alt="">
            {{else}}
            <img src="{{rootURL}}/assets/images/profile_pic.png" alt="">
            {{/if}}
            {{!-- <span class="dr-editar">Editar</span> --}}
            <h4>{{model.firstObject.user.first_name}} </h4>
            <p>{{model.firstObject.user.last_name}}</p>
            <p>Codigo {{model.firstObject.code}}</p>
        </div>

    </div>
    <div class="dr-ventas">
        <h2>${{sub model.firstObject.total model.firstObject.total_shipping}}</h2>
        <p>Ventas de este mes</p>
        <div class="dr-ganancias">
            <div class="row">
                <div class="col-6 text-center">
                    <h6>
                        ${{round (mult (sub model.firstObject.total model.firstObject.total_shipping model.firstObject.total_tax) model.firstObject.commission)}}
                    </h6>
                    <span>Ganacias del mes</span>
                </div>
                <div class="col-6 text-center">
                    <h6>
                        ðŸš€
                    </h6>
